<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- ConstraintLayout para organizar las vistas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="MissingClass">

        <!-- CardView para la foto -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <!-- ImageView para la foto -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="10px"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <!-- CardView para la informaci칩n -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <!-- LinearLayout para organizar la informaci칩n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- TextViews para mostrar informaci칩n -->
                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:text="Nombre"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal|top"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    tools:text="Info" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TextView para mostrar el ID -->

        <!-- CardView para la vista web -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvWebView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <!-- WebView for displaying a web page -->
            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- TextView for the URL of the web page -->

        <TextView
            android:id="@+id/tvPaginaWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:onClick="pulsaWeb"
            android:text="No disponemos de una p치gina web de contacto"
            tools:text="Pagina web" />

        <!-- CardView para los comentarios -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvCommentsView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="5px"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="4px">

                <TextView
                    android:id="@+id/tvCommentsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Comentarios (0)" />


                <ListView
                    android:id="@+id/lvComments"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView para los comentarios -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPhotosView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="5px"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="4px">

                <TextView
                    android:id="@+id/tvPhotosCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Fotos (0)" />

                <ListView
                    android:id="@+id/lvPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>